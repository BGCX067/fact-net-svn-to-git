<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="padrao_botao">
        <item name="android:background">@drawable/botao_principal</item>
        <item name="android:textColor">#2a84ad</item>
    </style>
    <style name="background">
		<item name="android:background">@drawable/fundo_principal</item>
	</style>
    <style name="cor_texto">
        <item name="android:textColor">#2a84ad</item>
    </style>
    <style name="titulo_app" parent="cor_texto">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="error_message">
        <item name="android:textColor">#b80b0b</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="info_message">
        <item name="android:textColor">#0d305a</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
