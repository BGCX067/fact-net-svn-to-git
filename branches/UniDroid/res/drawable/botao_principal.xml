<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
            <gradient 
                android:angle="270"
                android:type="linear"
                android:startColor="#c9c6c6"
                android:endColor="#FFF" />
            <corners android:radius="3dp"/>
            <stroke android:width="1px" android:color="#666"/>
        </shape>
        
    </item>

    <item >
        <shape>
            <gradient 
                android:angle="90"
                android:type="linear"
                android:startColor="#c9c6c6"
                android:endColor="#FFF" />
            <corners android:radius="3dp"/>
            <stroke android:width="1px" android:color="#666"/>
        </shape>
        
    </item>
    
</selector>
